<!DOCTYPE html>
<html>
<head>
    <title>NORDSAGA - Регистрация</title>
    <style>
        body {
            background: #0a0c10;
            color: #ffd700;
            font-family: Arial;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .container {
            background: #1a1e26;
            padding: 40px;
            border: 3px solid #b8860b;
            border-radius: 10px;
            width: 300px;
            text-align: center;
        }
        input {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            background: #2a2f3a;
            border: 1px solid #b8860b;
            color: #ffd700;
        }
        button {
            width: 100%;
            padding: 10px;
            background: #b8860b;
            color: #000;
            border: none;
            cursor: pointer;
            margin: 10px 0;
        }
        a {
            color: #b8860b;
            text-decoration: none;
        }
        .error {
            color: red;
            margin: 10px 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>⚔️ РЕГИСТРАЦИЯ ⚔️</h1>
        <input type="text" id="username" placeholder="Имя">
        <input type="password" id="password" placeholder="Пароль">
        <div id="error" class="error"></div>
        <button onclick="register()">Создать</button>
        <a href="/login">Войти</a>
    </div>

    <script>
        async function register() {
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            
            const res = await fetch('/register', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({username, password})
            });
            
            const data = await res.json();
            if (data.success) {
                window.location.href = data.redirect;
            } else {
                document.getElementById('error').innerHTML = data.message;
            }
        }
    </script>
</body>
</html>